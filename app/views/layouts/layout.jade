include ../mixins/all

block vars
  -title = 'Site'
  -bodyClass = ''

doctype html
if ($i18n.lang == "en")
  //[if IE 9]><html lang="en" class="no-js ie ie9"><![endif]
else if ($i18n.lang == "fr")
  //[if IE 9]><html lang="fr" class="no-js ie ie9"><![endif]
else if ($i18n.lang == "jp")
  //[if IE 9]><html lang="jp" class="no-js ie ie9"><![endif]
//[if gt IE 9]><!
html(class="no-js", lang=$i18n.lang)
  //<![endif]
  head
    meta(charset="utf-8")
    //[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1"><![endif]
    title=title
    meta(name="description", content="")
    meta(name="keywords", content="")
    meta(name="robots", content="index, follow")
    meta(name="author", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    link(rel="icon", href="../favicon-16x16.png", type="image/x-icon", sizes="16x16")
    link(rel="stylesheet", href="../css/libs.css")
    link(rel="stylesheet", href="../css/style.css")
    //[if lte IE 9]><link rel="stylesheet" href="../css/ie.css"><![endif]
    if ($i18n.lang == "jp")
      link(rel="stylesheet", href="../css/lang-#{$i18n.lang}.css")
    link(rel="stylesheet", href="../css/print.css", media="print")
    script(src="../js/modernizr.js")
  body(class=bodyClass)
    .container
      include ../blocks/header
      block container
      include ../blocks/footer
    block layer
    include ../blocks/overlay
    include ../blocks/overlay-send-mail
    include ../blocks/script
