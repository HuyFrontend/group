mixin nav(items)
  ul&attributes(attributes)
    each item, key in items
      - var active = ''
      - if (key === menuIndex) active = 'active'
      li(class=active)
        +link(item.title, item.href, item.text)(class=item.class)
        if (typeof(item.itemsMenu) !== 'undefined')
          +nav(item.itemsMenu)

mixin nav-data(items)
  ul&attributes(attributes)
    each item, key in items
      - var active = ''
      - if (key === menuIndex) active = 'active'
      li(class=active)
        +link-data(item.title, item.href, item.text, item.data)(class=item.class)
        if (typeof(item.itemsMenu) !== 'undefined')
          +nav(item.itemsMenu)
